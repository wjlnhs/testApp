<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/bootstrap/css/bootstrap-theme.min.css' />
      <link rel='stylesheet' href='/plug/sweetalert/css/sweet-alert.css' />
      <link rel='stylesheet' href='/stylesheets/index/index.css' />

      <script src="/plug/sweetalert/js/sweet-alert.min.js"></script>
      <script src="/bootstrap/js/jquery-3.1.0.min.js"></script>
      <script src="/bootstrap/js/bootstrap.js"></script>
      <script src="/plug/seajs/sea.js"></script>
        <body>
          <nav class="navbar navbar-default navbar-fixed-top">
              <div class="container">
                  <ul class="nav navbar-nav">
                      <li><a href="#">请登入</a></li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                      <li class="active">
                          <a type="login" href="#">登入</a></li>
                      </li>
                      <li>
                          <a type="reg" href="#">注册</a></li>
                  </ul>
              </div>
          </nav>
          <div id="myModal" role="dialog" class="form-group row modal fade">
              <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <h4 class="modal-title">注册</h4>
                      </div>
                      <div class="modal-body" >
                          <div class="row">
                              <div class="col-md-4">
                                  用户名：
                              </div>
                              <div class="col-md-8">
                                  <input id="regusername" class="form-control" >
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-4">
                                  密码：
                              </div>
                              <div class="col-md-8">
                                  <input id="regpassword" class="form-control" >
                              </div>
                          </div>
                      </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-primary" id="reg">注册</button>
                          <button type="button" class="btn btn-primary" id="login">登入</button>
                      </div>
                  </div>
              </div>
          </div>


          <script>
                seajs.use('/javascripts/index/index.js')
          </script>
        </body>
</html>
